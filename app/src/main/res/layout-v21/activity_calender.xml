<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_layout_background">

        <ImageView
            android:id="@+id/hospital_logo"
            android:layout_width="236dp"
            android:layout_height="33dp"
            android:layout_gravity="start|center_vertical"
            android:scaleType="fitStart" />

        <ImageView
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="end"
            android:background="@drawable/logout"
            android:layout_marginEnd="@dimen/margin_20" />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/main_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f7f7f7">

        <ImageButton
            android:id="@+id/doctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/doctors_btn"
            android:layout_marginStart="10dp" />

        <ImageButton
            android:id="@+id/doctor_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/doctors_info_btn"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp" />


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/doctor_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fafafa"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/activity_calendar_iv_doctor"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_05"
            android:src="@drawable/doctor_img" />


        <TextView
            android:id="@+id/docname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="Dr. Atul Prasad"
            android:textColor="#000000"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginEnd="@dimen/margin_10">

            <ImageButton
                android:id="@+id/chk_in"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#fafafa"
                android:src="@drawable/checkin"
                android:layout_marginStart="10dp"
                tools:ignore="NestedWeights" />


            <ImageButton
                android:id="@+id/visiting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#fafafa"
                android:src="@drawable/visiting" />

            <ImageButton
                android:id="@+id/load_nfc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#fafafa"
                android:src="@drawable/card" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/doctor_profile_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_02"
        android:elevation="@dimen/margin_02"
        android:orientation="horizontal"
        android:padding="@dimen/padding_02">

        <ImageView
            android:id="@+id/activity_calendar_iv_pre"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".11"
            android:src="@drawable/ic_chevron_left" />

        <TextView
            android:id="@+id/activity_calendar_tv_sun"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".11"
            android:gravity="center"
            android:text="06\nSun"
            android:textAllCaps="true"
            android:textColor="@color/date_color"
            android:textSize="@dimen/text_12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/activity_calendar_tv_mon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".11"
            android:gravity="center"
            android:text="01\nMon"
            android:textAllCaps="true"
            android:textColor="@color/date_color"
            android:textSize="@dimen/text_12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/activity_calendar_tv_tue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".11"
            android:gravity="center"
            android:text="02\nTue"
            android:textAllCaps="true"
            android:textColor="@color/date_color"
            android:textSize="@dimen/text_12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/activity_calendar_tv_wed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".11"
            android:gravity="center"
            android:text="03\nWed"
            android:textAllCaps="true"
            android:textColor="@color/date_color"
            android:textSize="@dimen/text_12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/activity_calendar_tv_thu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".11"
            android:gravity="center"
            android:text="04\nThu"
            android:textAllCaps="true"
            android:textColor="@color/date_color"
            android:textSize="@dimen/text_12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/activity_calendar_tv_fri"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".11"
            android:gravity="center"
            android:text="05\nFri"
            android:textAllCaps="true"
            android:textColor="@color/date_color"
            android:textSize="@dimen/text_12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/activity_calendar_tv_sat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".11"
            android:gravity="center"
            android:text="05\nSat"
            android:textAllCaps="true"
            android:textColor="@color/date_color"
            android:textSize="@dimen/text_12sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/activity_calendar_iv_next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight=".11"
            android:src="@drawable/ic_chevron_right" />


    </LinearLayout>

    <View
        android:id="@+id/calender_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="8dp"
        android:background="#cccccc" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9">

            <LinearLayout
                android:id="@+id/activity_calendar_rl_appointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/bottom_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_05"
                android:paddingBottom="@dimen/padding_05"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/appointment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="APPOINTMENT"
                    android:textStyle="bold"
                    android:textColor="@color/orange"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="  |  "
                    android:textColor="@color/tv_colorTextBrightGrey1"
                    android:textSize="15sp"
                    android:focusable="true" />


                <TextView
                    android:id="@+id/queue_mgmt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QUEUE"
                    android:textStyle="bold"
                    android:textColor="@color/txt_dark"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="  |  "
                    android:textColor="@color/tv_colorTextBrightGrey1"
                    android:textSize="15sp"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/billing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BILLING"
                    android:textStyle="bold"
                    android:textColor="@color/txt_dark"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="  |  "
                    android:textColor="@color/tv_colorTextBrightGrey1"
                    android:textSize="15sp"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/tv_fillcard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FILL CASHCARD"
                    android:textStyle="bold"
                    android:textColor="@color/txt_dark"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/mcura_logo" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
