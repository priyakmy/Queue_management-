<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_10"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/padding_10"
        android:text="@string/please_choose_nature_to_n_upload_selected_pdf"
        android:textSize="@dimen/margin_20" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cccccc" />
    <TextView
        android:id="@+id/tvPdfName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/padding_10"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/black" />
    <LinearLayout
        android:id="@+id/ll_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sp_listnatureId"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:padding="10dp"
            android:text="@string/postdate"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_cal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/datebg"
            android:gravity="center"
            android:padding="10dp"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/tvListNatureId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/edit_border"
        android:padding="@dimen/padding_10"
        android:hint="Nature Id" />
    <TextView
        android:id="@+id/tv_show_lab_report"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/padding_10"
        android:text="Lab Report"
        android:textSize="@dimen/margin_20"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cccccc"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_show_current_visit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/padding_10"
        android:visibility="gone"
        android:gravity="center"
        android:text="Current Visit Image"
        android:textSize="@dimen/margin_20" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cccccc"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_show_visit_summary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/padding_10"
        android:gravity="center"
        android:text="Visit Summary"
        android:textSize="@dimen/margin_20"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cccccc" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/padding_10"
        android:text="Cancel"
        android:textSize="@dimen/margin_20"
        android:background="@color/bg_norm"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/padding_10"
        android:text="Submit"
        android:textSize="@dimen/margin_20"
        android:background="@color/orange"
        android:textColor="@color/white"/>
</LinearLayout>


</LinearLayout>