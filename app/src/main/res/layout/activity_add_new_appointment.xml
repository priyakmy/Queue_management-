<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_layout_backgroung">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_20"
            android:background="@drawable/logo" />

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e1e1e1"
        android:padding="@dimen/text_14sp">

        <TextView
            android:id="@+id/add_patient_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/new_appointment_btn_bg_layer"
            android:text="Cancel"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/new_appointment_btn_bg_layer"
            android:text="Submit"
            android:textColor="@color/black" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_norm"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profile_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/text_14sp"
                android:layout_marginTop="@dimen/text_14sp"
                android:background="@drawable/patient_image" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_14sp"
                android:layout_marginRight="@dimen/text_14sp"
                android:background="@drawable/hospital_id_bg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_hospital_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Hospital ID:"
                    android:textColor="#a2a2a2"
                    android:textSize="@dimen/text_14sp" />

                <EditText
                    android:id="@+id/hospital_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@+id/h_id"
                    android:layout_toRightOf="@+id/tv_hospital_id"
                    android:background="@null"
                    android:enabled="true"
                    android:singleLine="true"
                    android:textColor="@color/text_hint"
                    android:textSize="@dimen/text_14sp" />

                <ImageView
                    android:id="@+id/h_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/h" />
            </RelativeLayout>

            <EditText
                android:id="@+id/patient_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_14sp"
                android:layout_marginRight="@dimen/text_14sp"
                android:layout_marginTop="@dimen/text_14sp"
                android:background="@drawable/new_pat_appointment_textbg"
                android:hint="Patient Name"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:textColor="@color/text_hint"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/text_14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_14sp"
                android:layout_marginRight="@dimen/text_14sp"
                android:layout_marginTop="@dimen/text_14sp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.mcura.jaideep.queuemanagement.view.SegmentedGroup
                    android:id="@+id/dob_age_segment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    segmentedgroup:sc_border_width="1dp"
                    segmentedgroup:sc_corner_radius="5dp"
                    segmentedgroup:sc_tint_color="#666">

                    <RadioButton
                        android:id="@+id/rb_dob"
                        style="@style/RadioButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="DOB" />

                    <RadioButton
                        android:id="@+id/rb_age"
                        style="@style/RadioButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Age" />
                </com.mcura.jaideep.queuemanagement.view.SegmentedGroup>

                <TextView
                    android:id="@+id/et_dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/new_pat_appointment_textbg"
                    android:gravity="left"
                    android:hint="Date Of Birth"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/text_hint"
                    android:textColorHint="@color/text_hint"
                    android:textSize="@dimen/text_14sp"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/et_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/new_pat_appointment_textbg"
                    android:gravity="left"
                    android:hint="Age"
                    android:inputType="number"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/text_hint"
                    android:textColorHint="@color/text_hint"
                    android:textSize="@dimen/text_14sp"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_14sp"
                android:layout_marginRight="@dimen/text_14sp"
                android:layout_marginTop="@dimen/text_14sp"
                android:orientation="horizontal"
                android:visibility="gone">

                <EditText
                    android:id="@+id/dob_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/new_pat_appointment_textbg"
                    android:gravity="center"
                    android:hint="DD"
                    android:inputType="number"
                    android:maxLength="2"
                    android:singleLine="true"
                    android:textColor="@color/text_hint"
                    android:textColorHint="@color/text_hint"
                    android:textSize="@dimen/text_14sp" />

                <EditText
                    android:id="@+id/dob_month"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/new_pat_appointment_textbg"
                    android:gravity="center"
                    android:hint="MM"
                    android:inputType="number"
                    android:maxLength="2"
                    android:singleLine="true"
                    android:textColor="@color/text_hint"
                    android:textColorHint="@color/text_hint"
                    android:textSize="@dimen/text_14sp" />

                <EditText
                    android:id="@+id/dob_year"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/new_pat_appointment_textbg"
                    android:gravity="center"
                    android:hint="YYYY"
                    android:inputType="number"
                    android:maxLength="4"
                    android:singleLine="true"
                    android:textColor="@color/text_hint"
                    android:textColorHint="@color/text_hint"
                    android:textSize="@dimen/text_14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_14sp"
                android:layout_marginRight="@dimen/text_14sp"
                android:layout_marginTop="@dimen/text_14sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Gender"
                    android:textColor="@color/black" />

                <RadioGroup
                    android:id="@+id/gender"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_male"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/toggle_widget_background"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center"
                        android:text="Male"
                        android:textColor="@color/black" />

                    <RadioButton
                        android:id="@+id/radio_female"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/toggle_widget_background"
                        android:button="@null"
                        android:gravity="center"
                        android:text="Female"
                        android:textColor="@color/black" />
                </RadioGroup>
            </LinearLayout>

            <EditText
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_14sp"
                android:layout_marginRight="@dimen/text_14sp"
                android:layout_marginTop="@dimen/text_14sp"
                android:background="@drawable/new_pat_appointment_textbg"
                android:hint="Mobile"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/text_hint"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/text_14sp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_14sp"
                android:layout_marginRight="@dimen/text_14sp"
                android:layout_marginTop="@dimen/text_14sp"
                android:background="@drawable/new_pat_appointment_textbg"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textColor="@color/text_hint"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/text_14sp" />

            <TextView
                android:id="@+id/show_detail_hide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/text_14sp"
                android:layout_marginLeft="@dimen/text_14sp"
                android:layout_marginRight="@dimen/text_14sp"
                android:layout_marginTop="@dimen/text_14sp"
                android:text="Add Address"
                android:textColor="#ff7f21" />


            <LinearLayout
                android:id="@+id/address_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_14sp"
                android:layout_marginRight="@dimen/text_14sp"
                android:layout_marginTop="@dimen/text_14sp"

                android:orientation="vertical"
                android:visibility="gone">

                <EditText
                    android:id="@+id/address1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/new_pat_appointment_textbg"
                    android:hint="Address 1"
                    android:singleLine="true"
                    android:textColor="@color/text_hint"
                    android:textColorHint="@color/text_hint"
                    android:textSize="@dimen/text_14sp" />

                <EditText
                    android:id="@+id/address2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_14sp"
                    android:background="@drawable/new_pat_appointment_textbg"
                    android:hint="Address 2"
                    android:singleLine="true"
                    android:textColor="@color/text_hint"
                    android:textColorHint="@color/text_hint"
                    android:textSize="@dimen/text_14sp" />

                <EditText
                    android:id="@+id/zipcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_14sp"
                    android:background="@drawable/new_pat_appointment_textbg"
                    android:hint="Zip Code"
                    android:singleLine="true"
                    android:textColor="@color/text_hint"
                    android:textColorHint="@color/text_hint"
                    android:textSize="@dimen/text_14sp" />

                <Spinner
                    android:id="@+id/country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_14sp"
                    android:background="@drawable/new_spiner"></Spinner>

                <Spinner
                    android:id="@+id/state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_14sp"
                    android:background="@drawable/new_spiner"></Spinner>

                <Spinner
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_14sp"
                    android:background="@drawable/new_spiner"></Spinner>

                <Spinner
                    android:id="@+id/area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/text_14sp"
                    android:layout_marginTop="@dimen/text_14sp"
                    android:background="@drawable/new_spiner"></Spinner>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</LinearLayout>