<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_layout_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dialog_complaint_50"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_20"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/min_margin_10"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_10"
            android:text="@string/user_name"
            android:textSize="@dimen/text_14sp"
            android:layout_marginStart="@dimen/margin_20" />

        <EditText
            android:id="@+id/activity_login_et_username"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_complaint_30"
            android:layout_margin="@dimen/margin_20"
            android:padding="@dimen/padding_05"
            android:background="@drawable/bg_border_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/min_margin_10"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_10"
            android:text="@string/password"
            android:textSize="@dimen/text_14sp"
            android:layout_marginStart="@dimen/margin_20" />

        <EditText
            android:id="@+id/activity_login_et_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_complaint_30"
            android:layout_margin="@dimen/margin_20"
            android:padding="@dimen/padding_05"
            android:background="@drawable/bg_border_white"
            android:inputType="textPassword" />


        <Button
            android:id="@+id/activity_login_btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_20"
            android:text="@string/submit" />
    </LinearLayout>

</RelativeLayout>
